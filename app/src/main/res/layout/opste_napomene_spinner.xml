<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtTipOpsteNapomene"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/slikaTipOpsteNapomene"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/slikaTipOpsteNapomene"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/slikaTipOpsteNapomene"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@+id/txtTipOpsteNapomene"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>